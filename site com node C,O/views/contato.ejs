    <!-- Contato -->
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="mb-4">Entre em Contato</h1>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-geo-alt-fill text-danger fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-0">Endereço</h5>
                            <p class="mb-0">Rua J. Marston, 67 - BlackWater</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-telephone-fill text-danger fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-0">Telefone</h5>
                            <p class="mb-0">(00) 4 8 15 16 23 42</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-envelope-fill text-danger fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-0">Email</h5>
                            <p class="mb-0">contato@saboresdosgames.com</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
                        <i class="bi bi-clock-fill text-danger fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-0">Horário</h5>
                            <p class="mb-0">Seg-Sáb: 11h às 23h | Dom: 12h às 22h</p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <h5>Redes Sociais</h5>
                    <a href="#" class="btn btn-outline-danger me-2"><i class="bi bi-instagram"></i> Instagram</a>
                    <a href="#" class="btn btn-outline-danger me-2"><i class="bi bi-facebook"></i> Facebook</a>
                    <a href="#" class="btn btn-outline-danger"><i class="bi bi-whatsapp"></i> WhatsApp</a>
                </div>
            </div>
            
            <div class="col-lg-6">
                <h2 class="mb-4">Envie uma Mensagem</h2>
                <form>
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefone" class="form-label">Telefone</label>
                        <input type="tel" class="form-control" id="telefone">
                    </div>
                    <div class="mb-3">
                        <label for="mensagem" class="form-label">Mensagem</label>
                        <textarea class="form-control" id="mensagem" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger w-100">Enviar Mensagem</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Mapa -->
    <div class="container-fluid px-0 mt-5">
        <div class="bg-dark text-white text-center p-4">
            <i class="bi bi-map fs-1"></i>
            <p class="mt-2">Rua J. Marston, 67 - BlackWater</p>
        </div>
